@using UsersRoles.Models
@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

@{ 
    ViewData["Title"] = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#new-role").hide();
                $("#display-role-form").click(function () {
                    $("#new-role").show();
                    $("#display-role-form").hide();
                });
                $("#new-role").submit(function (event) {
                    event.preventDefault();
                    $.ajax ({
                        type: "POST",
                        dataType: "html",
                        data: $(this).serialize(),
                        url: '@Url.Action("Create")',
                        success: function (result) {
                            location.reload();
                        }
                    });
                });
            });
        </script>
    </head>
    <body>
        <h1>Roles Manager</h1>
        <br />
        <hr />

        <button id="display-role-form">Create a New Role</button>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <form action="Create" method="post" id="new-role">
            <h2>Create Role</h2>
            <label for="roleName">Role Name</label>
            <input type="text" name="newName" />
            <button type="submit">Save</button>
        </form>
        <br />
        <hr />

        <h2>Roles List</h2>
        <ul>
            @foreach (var role in Model)
            {
                <li>@role.Name</li>
            }
        </ul>
    </body>
</html>
